- title "Mrentz | Contact us"
.container
	.bread
		= link_to "Home", root_path
		>
		Contact us
	= render "layouts/flash"
	.row
		.col-md-4
			.text-center
				= render "layouts/flash"
			#rent
				.rent-title
					%p Say Hello!

				.rent-content
					%h3 Thank you for your message!
					%p We'll get back to you soon.

		.col-md-4
		.col-md-4
			#side-menu
				.list-group
					= link_to "Home", root_path, :class => "list-group-item #{'active' if current_page?(root_path)}"
					= link_to "Help & FAQ", help_path, :class => "list-group-item #{'active' if current_page?(root_path)}"
					= link_to "Terms & Conditions", terms_path, :class => "list-group-item #{'active' if current_page?(terms_path)}"
					= link_to "Privacy Policy", privacypolicy_path, :class => "list-group-item #{'active' if current_page?(privacypolicy_path)}"
					= link_to "About Us" , about_path, :class => "list-group-item #{'active' if current_page?(root_path)}"
					= link_to "Contact Us", new_contact_path, :class => "list-group-item #{'active' if current_page?(new_contact_path) || current_page?(contacts_path) }"

	.foot-space     


