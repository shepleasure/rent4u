= link_to "Home", root_path
>

- case params[:category]
- when '1'
	Baby Accessories and Toys
- when '2'
	Books
- when '3'
	Camera and Accessories
- when '4'
	Costume and Accessories
- when '5'
	Electronics
- when '6'
	Event and Wedding Supplies
- when '7'
	Media and Gaming 
- when '8'
	Medical Supplies
- when '9'
	Musical Instruments
- when '10'
	Real Estate
- when '11'
	Services
- when '12'
	Sports, Fitness and Outdoor
- when '13'
	Vehicles
- else
	puts ''


%ul
	%li 
		= link_to "Popular", request.query_parameters.merge({:price => "popular"})
	%li 
		= link_to "High Price", request.query_parameters.merge({:price => "high"})
	%li 
		= link_to "Low Price", request.query_parameters.merge({:price => "low"})
	%li 
		= link_to "New", request.query_parameters.merge({:price => "new"})


%ul
- if @listings.present?


	- @listings.each do |listing|


		%li
			%span
				= listing.created_at.strftime('%B %d, %Y')
			%br
			= link_to image_tag(listing.listing_attachments.first.avatar.thumb.url), listing
			- if listing.reviews.blank?
				- @avg_review = 0
			- else
				- @avg_review = listing.reviews.average(:rating).round(2)
			.star-rating{:data => {'score' => @avg_review}} 
			= link_to listing.title, listing
			( 
			= listing.city
			- if listing.locality.blank?
				)
			- else 
				,
				= listing.locality
				)
			- if listing.price.blank?
			-else
				Rs. 
				= listing.price 
				per 
				= listing.time


- else 
	%p No Items found



%script
	$('.star-rating').raty({
	path: '/assets/',
	readOnly: true,
	score: function() {
	return $(this).attr('data-score');
	}
	});



